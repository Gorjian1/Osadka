<!-- File: Controls/ReportBlockToggle.xaml -->
<UserControl x:Class="Osadka.Controls.ReportBlockToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="260" d:DesignHeight="28">
    <!-- Нарочно максимально «тонкий» контрол, чтобы вставлять куда угодно -->
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <CheckBox x:Name="PART_Check"
                      VerticalAlignment="Center"
                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                      ToolTipService.ShowDuration="30000">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <ContentPresenter Content="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Label}"
                                      RecognizesAccessKey="True"
                                      VerticalAlignment="Center"/>
                </StackPanel>
            </CheckBox>

            <!-- Маленькая кнопка-подсказка с перечнем тегов -->
            <Border Width="18" Height="18" CornerRadius="9" Margin="6,0,0,0"
                    Background="#22000000" VerticalAlignment="Center"
                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ShowInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="i" FontWeight="Bold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border.ToolTip>
                    <ItemsControl ItemsSource="{Binding Tags}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border.ToolTip>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
