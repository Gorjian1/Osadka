<Window x:Class="Osadka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Osadka"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Osadka" Height="720" Width="1200" MinHeight="500" MinWidth="900"
        FontFamily="Segoe UI" FontSize="14" Background="#FAFAFC">

    <Window.Resources>
        <Color x:Key="Accent">#FF0078D7</Color>
        <Color x:Key="AccentDark">#FF0050A8</Color>
        <SolidColorBrush x:Key="AccentBrush"      Color="{StaticResource Accent}"/>
        <SolidColorBrush x:Key="AccentBrushDark" Color="{StaticResource AccentDark}"/>
        <SolidColorBrush x:Key="SidebarBg"        Color="#F4F8FD"/>

        <Style x:Key="NavToggle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0.32"/>
            <Setter Property="Padding"     Value="14,8"/>
            <Setter Property="Margin"      Value="10,6"/>
            <Setter Property="Cursor"      Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="root" 
                                CornerRadius="5" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#DCEBFD"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrushDark}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="root" Property="Background" Value="#EEE"/>
                                <Setter TargetName="root" Property="BorderThickness" Value="1.2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToolbarBtn" TargetType="Button">
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrushDark}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#EDF3FD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#D3E6FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="7"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="4" Background="#FFFFFF" BorderBrush="#E4E4E4" BorderThickness="0,0,0,1">
            <DockPanel>
                <Menu DockPanel.Dock="Left" Background="Transparent" BorderThickness="0" Height="24">
                    <MenuItem Header="Файл">
                        <MenuItem Header="Создать новый" Command="{Binding NewProjectCommand}" />
                        <MenuItem Header="Открыть..." Command="{Binding OpenProjectCommand}" />
                        <MenuItem Header="Сохранить" Command="{Binding SaveProjectCommand}" />
                        <MenuItem Header="Сохранить как..." Command="{Binding SaveAsProjectCommand}" />
                    </MenuItem>

                    <Separator Width="6"/>
                    <MenuItem Header="_Справка"

          Command="{Binding HelpCommand}">
                        <Separator Width="6"/>

                        <MenuItem.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Справка"/>
                            </DataTemplate>
                        </MenuItem.HeaderTemplate>
                    </MenuItem>
                    <TextBlock Text="{x:Static local:VersionProvider.Current}" />
                </Menu>
            </DockPanel>
        </Border>

        <Border Grid.Row="2" Background="{StaticResource SidebarBg}" BorderBrush="#E4E4E4" BorderThickness="0,0,1,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.25"/>
            </Border.Effect>

            <StackPanel>

                <StackPanel>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,0,1">
                        <CheckBox Content="Общий"
                  IsChecked="{Binding IncludeGeneral, Mode=TwoWay}"
                  Margin="0,0,16,0"/>
                        <CheckBox Content="Отн."
                  IsChecked="{Binding IncludeRelative, Mode=TwoWay}"
                  Margin="0,0,16,0"/>
                        <CheckBox Content="Графики"
                  IsChecked="{Binding IncludeGraphs, Mode=TwoWay}"/>
                    </StackPanel>
                    <Separator Margin="10,7" />
                </StackPanel>

                <Button Style="{StaticResource ToolbarBtn}" Content="📢 Создать отчёт 📢" FontSize="20" Command="{Binding QuickReportCommand}" Height="46"/>
                
                <StackPanel>
                    <Separator Margin="10,7" />
                </StackPanel>
                <RadioButton Style="{StaticResource NavToggle}" IsChecked="True"  Content="ⓘ Исходные данные "
                              GroupName="nav" Command="{Binding NavigateCommand}" CommandParameter="RawData" Height="30"/>
                <RadioButton Style="{StaticResource NavToggle}" Content="📄 Общий отчёт "
                              GroupName="nav" Command="{Binding NavigateCommand}" CommandParameter="SettlementDiff" Height="30"/>
                <RadioButton Style="{StaticResource NavToggle}" Content="📄 Отчёт разности осадок "
                              GroupName="nav" Command="{Binding NavigateCommand}" CommandParameter="Summary" Height="30"/>
                <RadioButton Style="{StaticResource NavToggle}" Content="📈 Динамика общей осадки "
                              GroupName="nav" Command="{Binding NavigateCommand}" CommandParameter="Graffics" Height="30"/>
                <Separator Margin="10,7" />
                <TextBlock Text="Дополнительно" HorizontalAlignment="Center" FontWeight="Light" Margin="10,0,0,0" FontSize="16"/>

                <RadioButton Style="{StaticResource NavToggle}" Content="📊 Состояния циклов"
                              GroupName="nav" Command="{Binding NavigateCommand}" CommandParameter="CycleState" Height="30"/>
                <RadioButton Style="{StaticResource NavToggle}" Content="🗺️ Открыть чертёж (координаты)"
              GroupName="nav" Command="{Binding NavigateCommand}" CommandParameter="Coordinates" Height="30"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Grid.Column="2" Background="#FFFFFF" CornerRadius="8" Margin="8" Padding="4">
            <ContentControl Content="{Binding CurrentPage}" Margin="-4,0,0,0"/>
        </Border>

    </Grid>
    <Window.InputBindings>
        <KeyBinding Key="V" Modifiers="Control" Command="{Binding PasteProxyCommand}" />
        <KeyBinding Modifiers="Ctrl" Key="V"
                Command="{Binding RawVM.PasteCommand}" />
        <KeyBinding Modifiers="Ctrl" Key="S"
                Command="{Binding SaveProjectCommand}" />
    </Window.InputBindings>

</Window>