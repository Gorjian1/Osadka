<Window x:Class="Osadka.Views.ImportSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор данных из Excel" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner" MinWidth="420">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Лист:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox Grid.Column="1" Margin="0,0,0,8"
                  ItemsSource="{Binding Worksheets}" DisplayMemberPath="Display"
                  SelectedItem="{Binding SelectedWorksheet}" />

        <TextBlock Grid.Row="1" Text="Объект:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                  ItemsSource="{Binding Objects}" DisplayMemberPath="Display"
                  SelectedItem="{Binding SelectedObject}" />

        <TextBlock Grid.Row="2" Text="Цикл:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,8"
                  ItemsSource="{Binding Cycles}" DisplayMemberPath="Display"
                  SelectedItem="{Binding SelectedCycle}" />

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="ОК" Width="110" IsDefault="True" Click="OkClick" Margin="0,0,8,0"/>
            <Button Content="Отмена" Width="110" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
